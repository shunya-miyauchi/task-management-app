<h1>ユーザー管理</h1>
<hr>
<%= link_to "新規ユーザー",new_admin_user_path,type:"button",class:"btn btn-danger btn-sm" %>
<%= link_to "タスク一覧",tasks_path,type:"button",class:"btn btn-secondary btn-sm" %>
<%= render 'layouts/flash' %>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">名前</th>
      <th scope="col">アドレス</th>
      <th scope="col">作成日</th>
      <th scope="col">タスク数</th>
      <th scope="col">ロール</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr> 
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td scope="row"><%= user.id %></td>
        <td scope="row"><%= user.name %></td>
        <td ><%= user.email %></td>
        <td><%= user.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin.to_s == "true" ? "管理者" : "" %></td>
        <td class="user_detail"><%= link_to "詳細",admin_user_path(user.id),type:"button",class:"btn btn-outline-info btn-sm"  %></td>
        <td><%= link_to "編集",edit_admin_user_path(user.id),type:"button",class:"btn btn-outline-secondary btn-sm"  %></td>
        <td><%= button_to "削除",admin_user_path(user.id),method: :delete,type:"button",class:"btn btn-outline-danger btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>