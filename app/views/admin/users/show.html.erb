<h1>ユーザー詳細</h1>
<hr>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">ID</th>
    </tr> 
  </thead>
  <tbody>
    <tr>
      <td scope="row"><%= @user.id %></td>
    </tr>
  </tbody>
  <thead class="thead-light">
    <tr>
      <th scope="col">名前</th>
    </tr> 
  </thead>
  <tbody>
    <tr>
      <td scope="row"><%= @user.name %></td>
    </tr>
  </tbody>
  <thead class="thead-light">
    <tr>
      <th scope="col">アドレス</th>
    </tr> 
  </thead>
  <tbody>
    <tr>
      <td scope="row"><%= @user.email %></td>
    </tr>
  </tbody>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">タスク名</th>
        <th scope="col">詳細</th>
        <th scope="col">終了期限</th>
        <th scope="col">ステータス</th>
        <th scope="col">優先順位</th>
      </tr> 
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td class="task_title" scope="row"><%= task.title %></td>
          <td ><%= task.detail %></td>
          <td><%= task.expired_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td><%= task.status %></td>
          <td class="task_priority"><%= task.priority %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</table>
<%= link_to "戻る",admin_users_path,type:"button",class:"btn btn-outline-dark btn-sm" %>